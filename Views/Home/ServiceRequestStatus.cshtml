@* Part 3: Service Request Status tracking with advanced data structures visualization *@

@model CivicLink.Models.ServiceRequestViewModel
@{
    ViewBag.Title = "Service Request Status - CivicLink";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-top: 2rem;">

    <!-- Page Header -->
    <div class="glass-card" style="padding: 2rem; margin-bottom: 2rem;">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-2" style="font-weight: 700;">
                    <i class="fas fa-tasks me-3" style="color: var(--primary-color);"></i>
                    Service Request Status
                </h2>
                <p class="text-muted mb-0">Track your service requests with advanced search and relationship analysis</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group" role="group">
                    <a href="@Url.Action("ServiceRequestStatus", new { priorityView = false })"
                       class="btn @(!Model.ShowPriorityView ? "btn-apple" : "btn-secondary-apple")">
                        <i class="fas fa-list me-2"></i>All Requests
                    </a>
                    <a href="@Url.Action("ServiceRequestStatus", new { priorityView = true })"
                       class="btn @(Model.ShowPriorityView ? "btn-apple" : "btn-secondary-apple")">
                        <i class="fas fa-fire me-2"></i>By Priority
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Statistics Row -->
    <div class="row mb-4">

        <!-- Search by ID Box -->
        <div class="col-lg-8">
            <div class="glass-card" style="padding: 2rem;">
                <h5 class="mb-3">
                    <i class="fas fa-search me-2"></i>Track Request by ID
                    <small class="text-muted">(Using Binary Search Tree)</small>
                </h5>

                <form asp-action="ServiceRequestStatus" method="get" id="searchForm">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text" style="background: var(--light-gray); border: none;">
                            <i class="fas fa-hashtag"></i>
                        </span>
                        <input type="number"
                               name="searchId"
                               class="form-control"
                               placeholder="Enter request ID (e.g., 1, 2, 3...)"
                               value="@Model.SearchQuery"
                               style="border: 1px solid rgba(142, 142, 147, 0.3);" />
                        <button type="submit" class="btn btn-apple">
                            <i class="fas fa-search me-2"></i>Search
                        </button>
                    </div>
                </form>

                @if (Model.SelectedRequest != null)
                {
                    <div class="mt-3 p-3" style="background: rgba(52, 199, 89, 0.1); border-radius: 12px; border-left: 4px solid var(--success-color);">
                        <strong><i class="fas fa-check-circle text-success me-2"></i>Request Found!</strong>
                        <div class="mt-2">
                            <strong>ID:</strong> #@Model.SelectedRequest.Id.ToString("D4") |
                            <strong>Status:</strong> @Model.SelectedRequest.Status
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.SearchQuery))
                {
                    <div class="mt-3 p-3" style="background: rgba(255, 59, 48, 0.1); border-radius: 12px; border-left: 4px solid var(--danger-color);">
                        <strong><i class="fas fa-times-circle text-danger me-2"></i>Request not found</strong>
                        <div class="mt-2">No request found with ID #@Model.SearchQuery</div>
                    </div>
                }
            </div>
        </div>

        <!-- Statistics Dashboard -->
        <div class="col-lg-4">
            <div class="glass-card" style="padding: 2rem;">
                <h5 class="mb-3">
                    <i class="fas fa-chart-bar me-2"></i>Quick Stats
                </h5>
                <div class="row text-center">
                    <div class="col-6 mb-2">
                        <div class="stat-number" style="font-size: 2rem; color: var(--primary-color);">
                            @(Model.Statistics.ContainsKey("Total") ? Model.Statistics["Total"] : 0)
                        </div>
                        <div class="stat-label" style="font-size: 0.85rem;">Total Requests</div>
                    </div>
                    <div class="col-6 mb-2">
                        <div class="stat-number" style="font-size: 2rem; color: var(--warning-color);">
                            @(Model.Statistics.ContainsKey("InProgress") ? Model.Statistics["InProgress"] : 0)
                        </div>
                        <div class="stat-label" style="font-size: 0.85rem;">In Progress</div>
                    </div>
                    <div class="col-6">
                        <div class="stat-number" style="font-size: 2rem; color: var(--success-color);">
                            @(Model.Statistics.ContainsKey("Resolved") ? Model.Statistics["Resolved"] : 0)
                        </div>
                        <div class="stat-label" style="font-size: 0.85rem;">Resolved</div>
                    </div>
                    <div class="col-6">
                        <div class="stat-number" style="font-size: 2rem; color: var(--danger-color);">
                            @(Model.Statistics.ContainsKey("Critical") ? Model.Statistics["Critical"] : 0)
                        </div>
                        <div class="stat-label" style="font-size: 0.85rem;">Critical</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Selected Request Detail (if searched) -->
    @if (Model.SelectedRequest != null)
    {
        <div class="glass-card priority-@Model.SelectedRequest.Priority.ToString().ToLower()" style="padding: 2rem; margin-bottom: 2rem;">
            <h5 class="mb-3">
                <i class="fas fa-info-circle me-2"></i>Request Details
            </h5>

            <div class="row">
                <div class="col-md-8">
                    <h3 class="mb-2">@Model.SelectedRequest.Title</h3>
                    <p class="text-muted mb-3">@Model.SelectedRequest.Description</p>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong><i class="fas fa-hashtag me-2"></i>ID:</strong> #@Model.SelectedRequest.Id.ToString("D4")<br />
                            <strong><i class="fas fa-calendar me-2"></i>Created:</strong> @Model.SelectedRequest.CreatedAt.ToString("MMM dd, yyyy")<br />
                            <strong><i class="fas fa-map-marker-alt me-2"></i>Location:</strong> @Model.SelectedRequest.Location
                        </div>
                        <div class="col-md-6">
                            <strong><i class="fas fa-flag me-2"></i>Priority:</strong>
                            <span class="badge priority-badge-@Model.SelectedRequest.Priority.ToString().ToLower()">
                                @Model.SelectedRequest.Priority
                            </span><br />
                            <strong><i class="fas fa-info me-2"></i>Status:</strong>
                            <span class="status-badge status-@Model.SelectedRequest.Status.ToString().ToLower()">
                                @Model.SelectedRequest.Status
                            </span><br />
                            <strong><i class="fas fa-tag me-2"></i>Category:</strong> @Model.SelectedRequest.Category
                        </div>
                    </div>

                    <a href="@Url.Action("IssueDetails", new { id = Model.SelectedRequest.Id })" class="btn btn-apple">
                        <i class="fas fa-eye me-2"></i>View Full Details
                    </a>
                </div>

                <div class="col-md-4">
                    @if (Model.RelatedRequests.Any())
                    {
                        <div style="background: rgba(0, 122, 255, 0.1); padding: 1.5rem; border-radius: 12px;">
                            <h6 class="mb-3">
                                <i class="fas fa-project-diagram me-2"></i>Related Requests
                                <small class="text-muted">(Using Graph)</small>
                            </h6>
                            @foreach (var related in Model.RelatedRequests.Take(3))
                            {
                                <div class="mb-2 p-2" style="background: white; border-radius: 8px;">
                                    <div style="font-size: 0.9rem; font-weight: 600;">#@related.Id - @related.Title</div>
                                    <div style="font-size: 0.8rem; color: var(--medium-gray);">@related.Status</div>
                                </div>
                            }
                            @if (Model.RelatedRequests.Count > 3)
                            {
                                <small class="text-muted">+@(Model.RelatedRequests.Count - 3) more related</small>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Filter and Sort Controls -->
    <div class="glass-card" style="padding: 1.5rem; margin-bottom: 2rem;">
        <form asp-action="ServiceRequestStatus" method="get">
            <div class="row align-items-end">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Sort By</label>
                            <select name="sortBy" class="form-select">
                                <option value="">Default (ID)</option>
                                <option value="status" selected="@(Model.SortBy == "status")">Status</option>
                                <option value="priority" selected="@(Model.SortBy == "priority")">Priority</option>
                                <option value="date" selected="@(Model.SortBy == "date")">Date</option>
                                <option value="category" selected="@(Model.SortBy == "category")">Category</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">View Type</label>
                            <select name="priorityView" class="form-select">
                                <option value="false" selected="@(!Model.ShowPriorityView)">Standard (BST)</option>
                                <option value="true" selected="@(Model.ShowPriorityView)">Priority (Heap)</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Graph View</label>
                            <select name="graphView" class="form-select">
                                <option value="false" selected="@(!Model.ShowGraphView)">Hide</option>
                                <option value="true" selected="@(Model.ShowGraphView)">Show MST</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-apple w-100">
                                <i class="fas fa-filter me-2"></i>Apply
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("ServiceRequestStatus")" class="btn btn-secondary-apple w-100">
                        <i class="fas fa-redo me-2"></i>Reset
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Data Structure Info Banner -->
    <div class="alert alert-info" style="border-radius: 12px; border-left: 4px solid var(--primary-color);">
        <div class="row align-items-center">
            <div class="col-md-8">
                <strong><i class="fas fa-info-circle me-2"></i>Advanced Data Structures in Use:</strong>
                @if (Model.ShowPriorityView)
                {
                    <span class="badge bg-primary ms-2">Min-Heap (Priority Queue)</span>
                }
                else
                {
                    <span class="badge bg-primary ms-2">Binary Search Tree & AVL Tree</span>
                }
                @if (Model.ShowGraphView)
                {
                    <span class="badge bg-success ms-2">Graph with MST (Kruskal's Algorithm)</span>
                }
                <span class="badge bg-info ms-2">Graph (BFS/DFS Traversal)</span>
            </div>
            <div class="col-md-4 text-end">
                <small class="text-muted">
                    <strong>Tree Nodes:</strong> @(Model.Statistics.ContainsKey("BSTNodes") ? Model.Statistics["BSTNodes"] : 0) |
                    <strong>Heap Size:</strong> @(Model.Statistics.ContainsKey("HeapSize") ? Model.Statistics["HeapSize"] : 0)
                </small>
            </div>
        </div>
    </div>

    <!-- Service Requests List -->
    @if (Model.ServiceRequests.Any())
    {
        <div class="row">
            @foreach (var request in Model.ServiceRequests)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="glass-card priority-@request.Priority.ToString().ToLower()" style="padding: 1.5rem; height: 100%;">

                        <!-- Request Header -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="mb-1" style="font-weight: 600;">@request.Title</h5>
                                <small class="text-muted">
                                    <i class="fas fa-hashtag me-1"></i>#@request.Id.ToString("D4")
                                </small>
                            </div>
                            <div class="text-end">
                                <span class="status-badge status-@request.Status.ToString().ToLower()">
                                    @request.Status
                                </span>
                            </div>
                        </div>

                        <!-- Request Info -->
                        <div class="mb-3">
                            <div class="mb-2">
                                <span class="badge priority-badge-@request.Priority.ToString().ToLower()">
                                    @request.Priority Priority
                                </span>
                                <span class="badge bg-secondary ms-2">
                                    @request.Category
                                </span>
                            </div>
                            <p class="text-muted mb-2" style="font-size: 0.9rem;">
                                @(request.Description.Length > 80 ? request.Description.Substring(0, 80) + "..." : request.Description)
                            </p>
                            <div style="font-size: 0.85rem;">
                                <i class="fas fa-map-marker-alt text-muted me-1"></i>
                                <span class="text-muted">@request.Location</span>
                            </div>
                            <div style="font-size: 0.85rem;">
                                <i class="fas fa-calendar text-muted me-1"></i>
                                <span class="text-muted">@request.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>

                        <!-- Progress Bar -->
                        <div class="mb-3">
                            @{
                                var progressPercent = request.Status switch
                                {
                                    IssueStatus.Submitted => 20,
                                    IssueStatus.InReview => 40,
                                    IssueStatus.InProgress => 60,
                                    IssueStatus.Resolved => 100,
                                    IssueStatus.Closed => 100,
                                    _ => 0
                                };
                                var progressColor = request.Status == IssueStatus.Resolved ? "var(--success-color)" : "var(--primary-color)";
                            }
                            <div class="progress" style="height: 6px; background: rgba(142, 142, 147, 0.2);">
                                <div class="progress-bar" style="width: @progressPercent%; background: @progressColor;"></div>
                            </div>
                            <small class="text-muted">@progressPercent% Complete</small>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("ServiceRequestStatus", new { searchId = request.Id })"
                               class="btn btn-secondary-apple btn-sm flex-fill">
                                <i class="fas fa-search me-1"></i>Track
                            </a>
                            <a href="@Url.Action("IssueDetails", new { id = request.Id })"
                               class="btn btn-apple btn-sm flex-fill">
                                <i class="fas fa-eye me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="glass-card text-center" style="padding: 4rem 2rem;">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <h4>No Service Requests Found</h4>
            <p class="text-muted mb-3">Start by reporting an issue to see service requests here.</p>
            <a href="@Url.Action("ReportIssue")" class="btn btn-apple">
                <i class="fas fa-plus me-2"></i>Report New Issue
            </a>
        </div>
    }

    <!-- Minimum Spanning Tree Visualization -->
    @if (Model.ShowGraphView && Model.MinimumSpanningTree.Any())
    {
        <div class="glass-card" style="padding: 2rem; margin-top: 2rem;">
            <h5 class="mb-3">
                <i class="fas fa-project-diagram me-2"></i>Request Relationships (Minimum Spanning Tree)
                <small class="text-muted">- Optimal connections between related requests</small>
            </h5>

            <div class="alert alert-info mb-3">
                <strong><i class="fas fa-info-circle me-2"></i>Algorithm:</strong> Kruskal's MST Algorithm |
                <strong>Edges:</strong> @Model.MinimumSpanningTree.Count |
                <strong>Purpose:</strong> Shows the most efficient relationships between service requests
            </div>

            <div class="mst-visualization">
                @foreach (var edge in Model.MinimumSpanningTree.Take(10))
                {
                    <div class="mst-edge mb-2 p-3" style="background: rgba(0, 122, 255, 0.05); border-radius: 12px; border-left: 4px solid var(--primary-color);">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <strong>Request #@edge.FromId.ToString("D4")</strong>
                            </div>
                            <div class="col-md-4 text-center">
                                <i class="fas fa-arrows-alt-h text-primary"></i>
                                <span class="badge bg-primary ms-2">@edge.RelationshipType</span>
                                <br />
                                <small class="text-muted">Weight: @edge.Weight.ToString("F2")</small>
                            </div>
                            <div class="col-md-4 text-end">
                                <strong>Request #@edge.ToId.ToString("D4")</strong>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.MinimumSpanningTree.Count > 10)
                {
                    <div class="text-center mt-3">
                        <small class="text-muted">Showing 10 of @Model.MinimumSpanningTree.Count connections</small>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Technical Information Footer -->
    <div class="glass-card" style="padding: 2rem; margin-top: 2rem; margin-bottom: 2rem;">
        <h5 class="mb-3">
            <i class="fas fa-code me-2"></i>Part 3: Technical Implementation
        </h5>
        <div class="row">
            <div class="col-md-6">
                <h6>Data Structures Used:</h6>
                <ul>
                    <li><strong>Binary Search Tree (BST):</strong> O(log n) average search complexity for request lookup</li>
                    <li><strong>AVL Tree:</strong> Self-balancing BST ensuring O(log n) worst-case performance</li>
                    <li><strong>Min-Heap:</strong> Priority queue for efficient highest-priority request access</li>
                    <li><strong>Graph:</strong> Represents relationships between service requests</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h6>Algorithms Implemented:</h6>
                <ul>
                    <li><strong>BST Insertion & Search:</strong> Efficient request management</li>
                    <li><strong>AVL Rotations:</strong> Automatic tree balancing</li>
                    <li><strong>Heap Operations:</strong> Insert, extract-min, heapify</li>
                    <li><strong>BFS/DFS Traversal:</strong> Finding related requests</li>
                    <li><strong>Kruskal's MST:</strong> Finding optimal request connections</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Animate stat numbers
            const statNumbers = document.querySelectorAll('.stat-number');
            statNumbers.forEach(stat => {
                const finalValue = parseInt(stat.textContent);
                animateValue(stat, 0, finalValue, 1000);
            });

            function animateValue(element, start, end, duration) {
                let startTimestamp = null;
                const step = (timestamp) => {
                    if (!startTimestamp) startTimestamp = timestamp;
                    const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                    const current = Math.floor(progress * (end - start) + start);
                    element.textContent = current;
                    if (progress < 1) {
                        window.requestAnimationFrame(step);
                    }
                };
                window.requestAnimationFrame(step);
            }

            // Add hover effects to request cards
            const cards = document.querySelectorAll('.glass-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-5px)';
                });
                card.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}
